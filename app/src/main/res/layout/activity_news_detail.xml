<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.NewsDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:paddingVertical="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/closeNewsDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                app:tint="@color/white" />
            <TextView
                android:id="@+id/titleNewsDetail"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="KOtta bola"
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:ellipsize="end"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/newsPicture"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/rasm"/>
        <TextView
            android:id="@+id/newsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dsjvjkblb hbvdsikcbk"
            android:layout_gravity="center"
            android:layout_marginHorizontal="14dp"
            android:textColor="@color/black"
            android:textSize="14sp"/>
    </LinearLayout>

</FrameLayout>